{
  "name": "nodepat",
  "version": "0.1.13",
  "description": "A NodeJS library that makes playing audio simple.",
  "main": "src/nodepat.js",
  "scripts": {
    "build": "tsc",
    "prepack": "npm run-script build && node tools/prepack.js",
    "postpack": "node tools/postpack.js",
    "install": "cd src/libpat/build && cmake .. -G Ninja -DSKIP_PAT_PLAY_BUILD=true && cmake --build .",
    "test": "ts-mocha test/**.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnewman/pat.git"
  },
  "author": "Thomas Newman",
  "license": "LGPL-2.0",
  "bugs": {
    "url": "https://github.com/tnewman/pat/issues"
  },
  "homepage": "https://github.com/tnewman/pat",
  "dependencies": {
    "ffi": "git+https://github.com/node-ffi/node-ffi.git"
  },
  "devDependencies": {
    "@types/ffi": "^0.2.2",
    "@types/mocha": "^5.2.6",
    "@types/ref": "0.0.28",
    "fs-extra": "^7.0.1",
    "mocha": "^6.1.4",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.4.4"
  },
  "files": [
    "src",
    "test"
  ]
}
